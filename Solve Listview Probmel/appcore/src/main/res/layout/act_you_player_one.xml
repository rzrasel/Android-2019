<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sysRelayMainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/idBottomViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff">

            <TextView
                android:id="@+id/idBottomView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alskf lasdlfj lajfa laflaslfdjlasfl alkdf alksdf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idVideoViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/idBottomViewContainer"
            android:layout_gravity="center"
            android:background="#000000">

            <FrameLayout
                android:id="@+id/sysFragmentYoutubePlayer"
                android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>